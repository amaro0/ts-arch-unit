{
  "name": "ts-arch-unit",
  "version": "0.2.3",
  "description": "Unit test your typescript architecture. Inspired by ArchUnit.",
  "homepage": "https://github.com/amaro0/ts-arch-unit",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "prepare": "husky install",
    "prebuild": "rm -rf dist",
    "prepublishOnly": "npm run build",
    "scratch": "ts-node-dev --respawn ./src/scratch.ts",
    "format": "prettier --check \"./**/*.ts\"",
    "format:fix": "prettier --write \"./**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --cache",
    "lint:ci": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fresh": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "mocha",
    "test:cov": "nyc npm test",
    "test:cov:report": "nyc --reporter=lcov npm test",
    "build": "tsc -p ./tsconfig.build.json",
    "build:typedoc": "typedoc",
    "build:typedoc:dev": "typedoc --watch"
  },
  "devDependencies": {
    "@commitlint/cli": "17.4.2",
    "@commitlint/config-conventional": "17.4.2",
    "@types/chai": "4.3.4",
    "@types/mocha": "10.0.1",
    "@types/node": "18.13.0",
    "@typescript-eslint/eslint-plugin": "6.0.0",
    "@typescript-eslint/parser": "6.0.0",
    "chai": "4.3.7",
    "eslint": "8.44.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.1.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-no-only-tests": "3.1.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-unused-imports": "3.0.0",
    "husky": "8.0.3",
    "mocha": "10.2.0",
    "nyc": "15.1.0",
    "prettier": "2.8.8",
    "pretty-quick": "3.1.3",
    "ts-node": "10.9.1",
    "ts-node-dev": "2.0.0",
    "typedoc": "0.24.8",
    "typescript": "5.1.6"
  },
  "dependencies": {
    "cosmiconfig": "8.2.0",
    "ts-morph": "19.0.0"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "require": "ts-node/register/transpile-only"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "ts",
    "typescript",
    "ast",
    "testing",
    "tests",
    "architecture",
    "unit",
    "arch-unit"
  ],
  "author": "amaro0",
  "license": "MIT"
}

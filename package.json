{
  "name": "ts-arch-unit",
  "version": "0.1.0",
  "description": "Unit test your typescript architecture. Inspired by ArchUnit.",
  "homepage": "https://github.com/amaro0/ts-arch-unit",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "prepare": "husky install",
    "prebuild": "rm -rf dist",
    "prepublishOnly": "npm run build",
    "scratch": "ts-node-dev --respawn ./src/scratch.ts",
    "format": "prettier --check \"./**/*.ts\"",
    "format:fix": "prettier --write \"./**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --cache",
    "lint:ci": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint:fresh": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "mocha",
    "test:cov": "nyc npm test",
    "test:cov:report": "nyc --reporter=lcov npm test",
    "build": "tsc -p ./tsconfig.build.json",
    "build:typedoc": "typedoc",
    "build:typedoc:dev": "typedoc --watch"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^18.6.3",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "chai": "^4.3.6",
    "coveralls": "^3.1.1",
    "eslint": "^7.29.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^1.1.1",
    "husky": "^8.0.0",
    "mocha": "^10.0.0",
    "nyc": "^15.1.0",
    "prettier": "^2.3.1",
    "pretty-quick": "^3.1.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typedoc": "^0.23.9",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "cosmiconfig": "^7.0.1",
    "ts-morph": "^15.1.0"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "require": "ts-node/register/transpile-only"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "ts",
    "typescript",
    "ast",
    "testing",
    "tests",
    "architecture",
    "unit",
    "arch-unit"
  ],
  "author": "amaro0",
  "license": "MIT"
}
